<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imageBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/crop"
        android:scaleType="centerCrop"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello BlackPink in your Area!"
            android:background="#0A0909"
            android:textSize="20sp"
            android:textColor="#F8F8F8"
            android:layout_above="@id/imageView"
            android:layout_centerHorizontal="true"/>

    <TextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:text="I am a new developer."
    android:background="#36669A"
    android:textSize="20sp" android:textColor="#030303"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/android_kotlin"
        android:layout_centerInParent="true"/>


</RelativeLayout>